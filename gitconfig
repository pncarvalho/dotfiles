[alias]
    ci = commit -v
    amend = commit --amend
    co = checkout
    st = status -s
    br = branch -v
    rt = remote -v
    df = diff
    dc = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all 
    unstage = reset HEAD
    uncommit = reset --soft 'HEAD^'
[color]
    ui = auto
    diff = auto
    branch = auto
    status = auto
    interactive = auto
[push]
    default = simple
[core]
    excludesfile = ~/.gitignore
    editor = vim
[merge]
    summary=true
